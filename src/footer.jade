.panel-secondary--top-margin
    .grid
        footer.grid__col--12.panel--centered
            a.site-logo--right.is-hidden-mobile(href="index.html")
                b.srt Ralph Maltby
            ul.nav--left
                li.nav__item--small
                    a(href="products.html") products
                li.nav__item--small
                    a(href="learn.html") learn
                li.nav__item--small
                    a(href="ask.html") ask
                li.nav__item--small
                    a(href="about.html") about
                li.nav__item--small
                    a(href="contact.html") contact
script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
script.

    $('header .nav a').each(function() {
        if ($(this).prop('href') == window.location.href) {
            $(this).parent().removeClass('nav__item').addClass('nav__item--current');
        }
    });

    $(document).ready(function(){
        $(".accordian h3").click(function(){
            $(".accordian ul ul").slideUp();
            if(!$(this).next().is(":visible"))
            {
                $(this).next().slideDown();
            }
        })
    })

    $('#toggle').click(function() {
        $(this).next('.nav').toggleClass("is-collapsed-mobile");
    });